{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://dw2mc.github.io/DW2ModLoader/def-CharacterRoom.json",
  "type": "object",
  "properties": {
    "RoomId": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "integer"
        }
      ]
    },
    "Name": {
      "type": "string"
    },
    "$Name": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "RoomImageFilename": {
      "type": "string"
    },
    "$RoomImageFilename": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "WindowRatioRegion": {
      "type": "object",
      "properties": {
        "X": {
          "$ref": "#/$defs/NumberExpression"
        },
        "Y": {
          "$ref": "#/$defs/NumberExpression"
        },
        "Width": {
          "$ref": "#/$defs/NumberExpression"
        },
        "Height": {
          "$ref": "#/$defs/NumberExpression"
        },
        "Left": {
          "$ref": "#/$defs/NumberExpression"
        },
        "Top": {
          "$ref": "#/$defs/NumberExpression"
        },
        "Location": {
          "type": "object",
          "properties": {
            "X": {
              "$ref": "#/$defs/NumberExpression"
            },
            "Y": {
              "$ref": "#/$defs/NumberExpression"
            },
            "Item": {
              "$ref": "#/$defs/NumberExpression"
            }
          },
          "unevaluatedProperties": false,
          "additionalProperties": false
        },
        "Size": {
          "type": "object",
          "properties": {
            "Width": {
              "$ref": "#/$defs/NumberExpression"
            },
            "Height": {
              "$ref": "#/$defs/NumberExpression"
            }
          },
          "unevaluatedProperties": false,
          "additionalProperties": false
        }
      },
      "unevaluatedProperties": false,
      "additionalProperties": false
    },
    "DataPath": {
      "type": "string"
    },
    "$DataPath": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "Scale": {
      "$ref": "#/$defs/NumberExpression"
    },
    "AnimationNames": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "$ref": "#/$defs/DistantWorlds.Types.SortableTextValue"
              },
              {
                "type": "string",
                "pattern": "^\\(delete\\)$"
              }
            ]
          },
          "unevaluatedItems": false
        },
        {
          "allOf": [
            {
              "$ref": "./expression-language.json#/$defs/list-selection"
            },
            {
              "patternProperties": {
                "^0|[1-9][0-9]*|\\([^\\)]\u002B\\)$": {
                  "anyOf": [
                    {
                      "$ref": "#/$defs/DistantWorlds.Types.SortableTextValue"
                    },
                    {
                      "type": "string",
                      "pattern": "^\\(delete\\)$"
                    }
                  ]
                }
              },
              "additionalProperties": false,
              "unevaluatedProperties": false
            }
          ]
        },
        {
          "type": "object",
          "properties": {
            "$add": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/DistantWorlds.Types.SortableTextValue"
              }
            }
          },
          "additionalProperties": false,
          "unevaluatedProperties": false
        }
      ]
    },
    "$RoomId": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "$where": {
      "$ref": "#/$defs/ExplicitExpression"
    }
  },
  "$defs": {
    "DistantWorlds.Types.SortableTextValue": {
      "unevaluatedProperties": false,
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "Text": {
          "type": "string"
        },
        "$Text": {
          "$ref": "./expression-language.json#"
        },
        "Text2": {
          "type": "string"
        },
        "$Text2": {
          "$ref": "./expression-language.json#"
        },
        "Text3": {
          "type": "string"
        },
        "$Text3": {
          "$ref": "./expression-language.json#"
        },
        "Value": {
          "oneOf": [
            {
              "$ref": "./expression-language.json#"
            },
            {
              "type": "number"
            }
          ]
        },
        "Value2": {
          "oneOf": [
            {
              "$ref": "./expression-language.json#"
            },
            {
              "type": "number"
            }
          ]
        }
      }
    },
    "ExplicitExpression": {
      "$ref": "./expression-language.json#"
    },
    "NumberExpression": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "number"
        }
      ]
    }
  }
}