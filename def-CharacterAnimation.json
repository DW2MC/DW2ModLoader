{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://dw2mc.github.io/DW2ModLoader/def-CharacterAnimation.json",
  "type": "object",
  "properties": {
    "CharacterAnimationId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "Role": {
      "enum": [
        "Undefined",
        "Leader",
        "Pirate",
        "Ambassador",
        "ColonyGovernor",
        "FleetAdmiral",
        "ShipCaptain",
        "TroopGeneral",
        "Scientist",
        "Spy"
      ],
      "title": "CharacterRole",
      "description": "Some text (enum) mapped to some byte\nSee https://github.com/DW2MC/DW2ModLoader/wiki/YAML-content-patch-syntax-reference#Enums and https://github.com/DW2MC/DW2ModLoader/wiki/DistantWorlds.Types.CharacterRole"
    },
    "RaceId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "DataPath": {
      "type": "string"
    },
    "$DataPath": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "SkinName": {
      "type": "string"
    },
    "$SkinName": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "ImagePath": {
      "type": "string"
    },
    "$ImagePath": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "CharacterRoomId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "AnimationNamesIdleNeutral": {
      "$ref": "#/$defs/array"
    },
    "AnimationNamesIdleHappy": {
      "$ref": "#/$defs/array"
    },
    "AnimationNamesIdleAngry": {
      "$ref": "#/$defs/array"
    },
    "AnimationNamesIncidentHappy": {
      "$ref": "#/$defs/array"
    },
    "AnimationNamesIncidentAngry": {
      "$ref": "#/$defs/array"
    },
    "Scale": {
      "$ref": "#/$defs/NumberExpression"
    },
    "BottomCropRatio": {
      "$ref": "#/$defs/NumberExpression"
    },
    "$CharacterAnimationId": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "$where": {
      "$ref": "#/$defs/ExplicitExpression"
    }
  },
  "$defs": {
    "DistantWorlds.Types.SortableTextValue": {
      "unevaluatedProperties": false,
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "Text": {
          "type": "string"
        },
        "$Text": {
          "$ref": "./expression-language.json#"
        },
        "Text2": {
          "type": "string"
        },
        "$Text2": {
          "$ref": "./expression-language.json#"
        },
        "Text3": {
          "type": "string"
        },
        "$Text3": {
          "$ref": "./expression-language.json#"
        },
        "Value": {
          "oneOf": [
            {
              "$ref": "./expression-language.json#"
            },
            {
              "type": "number"
            }
          ],
          "title": "decimal number or expression",
          "description": "A decimal number or an expression.\nSee https://github.com/DW2MC/DW2ModLoader/wiki/Expression-language-syntax-reference#numbers"
        },
        "Value2": {
          "oneOf": [
            {
              "$ref": "./expression-language.json#"
            },
            {
              "type": "number"
            }
          ],
          "title": "decimal number or expression",
          "description": "A decimal number or an expression.\nSee https://github.com/DW2MC/DW2ModLoader/wiki/Expression-language-syntax-reference#numbers"
        }
      },
      "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/DistantWorlds.Types.SortableTextValue",
      "title": "SortableTextValue"
    },
    "ExplicitExpression": {
      "$ref": "./expression-language.json#"
    },
    "IntegerExpression": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "integer"
        }
      ],
      "description": "An integer number or an expression.\nSee https://github.com/DW2MC/DW2ModLoader/wiki/Expression-language-syntax-reference#numbers"
    },
    "NumberExpression": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "number"
        }
      ],
      "title": "decimal number or expression",
      "description": "A decimal number or an expression.\nSee https://github.com/DW2MC/DW2ModLoader/wiki/Expression-language-syntax-reference#numbers"
    },
    "array": {
      "anyOf": [
        {
          "allOf": [
            {
              "title": "SortableTextValues collection",
              "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/YAML-content-patch-syntax-reference#Collections and https://github.com/DW2MC/DW2ModLoader/wiki/DistantWorlds.Types.SortableTextValue",
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "$ref": "#/$defs/DistantWorlds.Types.SortableTextValue"
                  },
                  {
                    "type": "string",
                    "enum": [
                      "(delete)"
                    ],
                    "title": "Remove the SortableTextValue at this position from the collection.",
                    "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/YAML-content-patch-syntax-reference#Collections"
                  }
                ]
              },
              "unevaluatedItems": false,
              "unevaluatedProperties": false,
              "additionalProperties": {
                "anyOf": [
                  {
                    "$ref": "#/$defs/DistantWorlds.Types.SortableTextValue"
                  },
                  {
                    "enum": [
                      "(delete)"
                    ],
                    "title": "Remove the SortableTextValue at this position from the collection.",
                    "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/YAML-content-patch-syntax-reference#Collections"
                  }
                ]
              }
            },
            {
              "$ref": "./expression-language.json#/$defs/list-selection"
            }
          ]
        },
        {
          "type": "object",
          "properties": {
            "$add": {
              "title": "SortableTextValues collection",
              "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/YAML-content-patch-syntax-reference#Collections and https://github.com/DW2MC/DW2ModLoader/wiki/DistantWorlds.Types.SortableTextValue",
              "type": "array",
              "items": {
                "$ref": "#/$defs/DistantWorlds.Types.SortableTextValue"
              }
            }
          },
          "title": "Add new SortableTextValues to the end of the collection.",
          "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/YAML-content-patch-syntax-reference#Collections",
          "additionalProperties": false,
          "unevaluatedProperties": false
        }
      ]
    }
  }
}