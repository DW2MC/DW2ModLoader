{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://impromptu.ninja/dw2/def-CharacterAnimation.json",
  "type": "object",
  "$defs": {
    "IntegerExpression": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "integer"
        }
      ]
    },
    "ExplicitExpression": {
      "$ref": "./expression-language.json#"
    },
    "array": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/$defs/SortableTextValue"
              },
              {
                "type": "string",
                "pattern": "^\\(delete\\)$"
              }
            ]
          }
        },
        {
          "type": "object",
          "patternProperties": {
            "^0|[1-9][0-9]*|\\([^\\)]\u002B\\)$": {
              "oneOf": [
                {
                  "$ref": "#/$defs/SortableTextValue"
                },
                {
                  "type": "string",
                  "pattern": "^\\(delete\\)$"
                }
              ]
            }
          },
          "$ref": "./expression-language.json#/$defs/list-selection"
        },
        {
          "type": "object",
          "properties": {
            "$add": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/SortableTextValue"
              }
            }
          }
        }
      ]
    },
    "NumberExpression": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "number"
        }
      ]
    }
  },
  "properties": {
    "CharacterAnimationId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "Role": {
      "enum": [
        "Undefined",
        "Leader",
        "Pirate",
        "Ambassador",
        "ColonyGovernor",
        "FleetAdmiral",
        "ShipCaptain",
        "TroopGeneral",
        "Scientist",
        "Spy"
      ]
    },
    "RaceId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "DataPath": {
      "type": "string"
    },
    "$DataPath": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "SkinName": {
      "type": "string"
    },
    "$SkinName": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "ImagePath": {
      "type": "string"
    },
    "$ImagePath": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "CharacterRoomId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "AnimationNamesIdleNeutral": {
      "$ref": "#/$defs/array"
    },
    "AnimationNamesIdleHappy": {
      "$ref": "#/$defs/array"
    },
    "AnimationNamesIdleAngry": {
      "$ref": "#/$defs/array"
    },
    "AnimationNamesIncidentHappy": {
      "$ref": "#/$defs/array"
    },
    "AnimationNamesIncidentAngry": {
      "$ref": "#/$defs/array"
    },
    "Scale": {
      "$ref": "#/$defs/NumberExpression"
    },
    "BottomCropRatio": {
      "$ref": "#/$defs/NumberExpression"
    },
    "$CharacterAnimationId": {
      "$ref": "#/$defs/ExplicitExpression"
    }
  }
}