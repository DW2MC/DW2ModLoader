{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://impromptu.ninja/dw2/def-Government.json",
  "type": "object",
  "$defs": {
    "ExplicitExpression": {
      "$ref": "./expression-language.json#"
    },
    "NumberExpression": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "number"
        }
      ]
    },
    "array": {
      "oneOf": [
        {
          "type": "array",
          "items": {}
        },
        {
          "type": "object",
          "patternProperties": {
            "^0|[1-9][0-9]*|\\([^\\)]\u002B\\)$": {}
          },
          "$ref": "./expression-language.json#/$defs/list-selection"
        },
        {
          "type": "object",
          "properties": {
            "$add": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      ]
    },
    "array1": {
      "oneOf": [
        {
          "type": "array",
          "items": {}
        },
        {
          "type": "object",
          "patternProperties": {
            "^0|[1-9][0-9]*|\\([^\\)]\u002B\\)$": {}
          },
          "$ref": "./expression-language.json#/$defs/list-selection"
        },
        {
          "type": "object",
          "properties": {
            "$add": {
              "type": "array",
              "items": {
                "type": "number"
              }
            }
          }
        }
      ]
    }
  },
  "properties": {
    "GovernmentId": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "integer"
        }
      ]
    },
    "LeaderTitle": {
      "type": "string"
    },
    "$LeaderTitle": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "CabinetTitle": {
      "type": "string"
    },
    "$CabinetTitle": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "EconomicFactors": {
      "type": "object",
      "properties": {
        "IncomeFactors": {
          "$ref": "#/$defs/array1"
        },
        "ExpenseFactors": {
          "$ref": "#/$defs/array1"
        }
      }
    },
    "LeaderReplacementLikelihood": {
      "$ref": "#/$defs/NumberExpression"
    },
    "LeaderReplacementDisruption": {
      "$ref": "#/$defs/NumberExpression"
    },
    "LeaderReplacementBoost": {
      "$ref": "#/$defs/NumberExpression"
    },
    "LeaderReplacementCharacterPool": {
      "oneOf": [
        {
          "type": "array",
          "items": {}
        },
        {
          "type": "object",
          "patternProperties": {
            "^0|[1-9][0-9]*|\\([^\\)]\u002B\\)$": {}
          },
          "$ref": "./expression-language.json#/$defs/list-selection"
        },
        {
          "type": "object",
          "properties": {
            "$add": {
              "type": "array",
              "items": {
                "enum": [
                  "Undefined",
                  "Leader",
                  "Pirate",
                  "Ambassador",
                  "ColonyGovernor",
                  "FleetAdmiral",
                  "ShipCaptain",
                  "TroopGeneral",
                  "Scientist",
                  "Spy"
                ]
              }
            }
          }
        }
      ]
    },
    "LeaderReplacementTypicalManner": {
      "enum": [
        "Undefined",
        "SimpleReplacement",
        "CoupDetat",
        "Election"
      ]
    },
    "Stability": {
      "$ref": "#/$defs/NumberExpression"
    },
    "ConcernForOwnReputation": {
      "$ref": "#/$defs/NumberExpression"
    },
    "ImportanceOfOthersReputations": {
      "$ref": "#/$defs/NumberExpression"
    },
    "UsesCabinet": {
      "type": "boolean"
    },
    "CabinetFactorNavalChief": {
      "$ref": "#/$defs/NumberExpression"
    },
    "CabinetFactorGroundForcesChief": {
      "$ref": "#/$defs/NumberExpression"
    },
    "CabinetFactorIntelligenceDirector": {
      "$ref": "#/$defs/NumberExpression"
    },
    "CabinetFactorHeadDiplomat": {
      "$ref": "#/$defs/NumberExpression"
    },
    "CabinetFactorScienceAdministrator": {
      "$ref": "#/$defs/NumberExpression"
    },
    "CabinetFactorTradeIndustryAdministrator": {
      "$ref": "#/$defs/NumberExpression"
    },
    "UseBaseForCapital": {
      "type": "boolean"
    },
    "CanColonize": {
      "type": "boolean"
    },
    "RequiresColoniesToExist": {
      "type": "boolean"
    },
    "CanRaid": {
      "type": "boolean"
    },
    "AllowControlMiningShips": {
      "type": "boolean"
    },
    "EmpireNameAdjectives": {
      "$ref": "#/$defs/array"
    },
    "EmpireNameNouns": {
      "$ref": "#/$defs/array"
    },
    "Biases": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/$defs/IndexFactor"
              },
              {
                "type": "string",
                "pattern": "^\\(delete\\)$"
              }
            ]
          }
        },
        {
          "type": "object",
          "patternProperties": {
            "^0|[1-9][0-9]*|\\([^\\)]\u002B\\)$": {
              "oneOf": [
                {
                  "$ref": "#/$defs/IndexFactor"
                },
                {
                  "type": "string",
                  "pattern": "^\\(delete\\)$"
                }
              ]
            }
          },
          "$ref": "./expression-language.json#/$defs/list-selection"
        },
        {
          "type": "object",
          "properties": {
            "$add": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/IndexFactor"
              }
            }
          }
        }
      ]
    },
    "Bonuses": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/$defs/Bonus"
              },
              {
                "type": "string",
                "pattern": "^\\(delete\\)$"
              }
            ]
          }
        },
        {
          "type": "object",
          "patternProperties": {
            "^0|[1-9][0-9]*|\\([^\\)]\u002B\\)$": {
              "oneOf": [
                {
                  "$ref": "#/$defs/Bonus"
                },
                {
                  "type": "string",
                  "pattern": "^\\(delete\\)$"
                }
              ]
            }
          },
          "$ref": "./expression-language.json#/$defs/list-selection"
        },
        {
          "type": "object",
          "properties": {
            "$add": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/Bonus"
              }
            }
          }
        }
      ]
    },
    "Name": {
      "type": "string"
    },
    "$Name": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "Description": {
      "type": "string"
    },
    "$Description": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "ImageFilename": {
      "type": "string"
    },
    "$ImageFilename": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "$GovernmentId": {
      "$ref": "#/$defs/ExplicitExpression"
    }
  }
}