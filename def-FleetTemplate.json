{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://dw2mc.github.io/DW2ModLoader/def-FleetTemplate.json",
  "type": "object",
  "properties": {
    "FleetTemplateId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "RaceId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "Name": {
      "type": "string"
    },
    "$Name": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "Role": {
      "enum": [
        "Manual",
        "Attack",
        "Raid",
        "Defend",
        "Invade"
      ]
    },
    "DefaultEngagementRange": {
      "$ref": "#/$defs/TacticsEngagementType"
    },
    "DefaultRetreatStrength": {
      "enum": [
        "LessThan75",
        "LessThan66",
        "LessThan50",
        "LessThan33",
        "LessThan25",
        "Never"
      ]
    },
    "DefaultRetreatOverwhelmed": {
      "enum": [
        "EnemyStrength150",
        "EnemyStrength200",
        "EnemyStrength300",
        "Never",
        "EnemyStrength100"
      ]
    },
    "DefaultStance": {
      "$ref": "#/$defs/TacticsStance"
    },
    "ShipsEngagementRange": {
      "$ref": "#/$defs/TacticsEngagementType"
    },
    "ShipsAttackRangeNormal": {
      "$ref": "#/$defs/TacticsStance"
    },
    "ShipsAttackRangeStronger": {
      "$ref": "#/$defs/TacticsStance"
    },
    "ShipsRetreatWhen": {
      "enum": [
        "EnemySightedSystem",
        "EnemySightedLocation",
        "EnemyNearby",
        "WhenAttacked",
        "Shields50OrArmor99",
        "Shields20OrArmor50",
        "Never",
        "Shields50OrAnyDamage",
        "Shields20OrAnyDamage",
        "Shields0OrArmor0",
        "LightDamage",
        "ModerateDamage",
        "NonDefenseComponentDestroyedOrDamaged1",
        "NonDefenseComponentDestroyedOrDamaged20",
        "NonDefenseComponentDestroyedOrDamaged50"
      ]
    },
    "ShipsInvadeWhen": {
      "enum": [
        "InvadeImmediately",
        "InvadeWhenClear",
        "NeverInvade"
      ]
    },
    "AllowShipRoleReassignment": {
      "type": "boolean"
    },
    "OverrideShipTacticsWithFleet": {
      "type": "boolean"
    },
    "IsActive": {
      "type": "boolean"
    },
    "IsBaseline": {
      "type": "boolean"
    },
    "ShipAmounts": {
      "anyOf": [
        {
          "title": "ShipRoleFactors collection",
          "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/YAML-content-patch-syntax-reference#Collections and https://github.com/DW2MC/DW2ModLoader/wiki/DistantWorlds.Types.ShipRoleFactor",
          "type": "array",
          "items": {
            "anyOf": [
              {
                "$ref": "#/$defs/DistantWorlds.Types.ShipRoleFactor"
              },
              {
                "type": "string",
                "enum": [
                  "(delete)"
                ],
                "title": "Remove the ShipRoleFactor at this position from the collection.",
                "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/YAML-content-patch-syntax-reference#Collections"
              }
            ]
          },
          "unevaluatedItems": false
        },
        {
          "allOf": [
            {
              "$ref": "./expression-language.json#/$defs/list-selection"
            },
            {
              "additionalProperties": {
                "anyOf": [
                  {
                    "$ref": "#/$defs/DistantWorlds.Types.ShipRoleFactor"
                  },
                  {
                    "enum": [
                      "(delete)"
                    ],
                    "title": "Remove the ShipRoleFactor at this position from the collection.",
                    "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/YAML-content-patch-syntax-reference#Collections"
                  }
                ]
              },
              "unevaluatedProperties": false
            }
          ]
        },
        {
          "type": "object",
          "properties": {
            "$add": {
              "title": "ShipRoleFactors collection",
              "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/YAML-content-patch-syntax-reference#Collections and https://github.com/DW2MC/DW2ModLoader/wiki/DistantWorlds.Types.ShipRoleFactor",
              "type": "array",
              "items": {
                "$ref": "#/$defs/DistantWorlds.Types.ShipRoleFactor"
              }
            }
          },
          "title": "Add new ShipRoleFactors to the end of the collection.",
          "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/YAML-content-patch-syntax-reference#Collections",
          "additionalProperties": false,
          "unevaluatedProperties": false
        }
      ]
    },
    "DesignIdsPerRole": {
      "anyOf": [
        {
          "title": "32-bit integers collection",
          "description": "A collection of signed 32-bit integers.",
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "integer"
              },
              {
                "type": "string",
                "enum": [
                  "(delete)"
                ],
                "title": "Remove the 32-bit integer at this position from the collection.",
                "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/YAML-content-patch-syntax-reference#Collections"
              }
            ]
          },
          "unevaluatedItems": false
        },
        {
          "allOf": [
            {
              "$ref": "./expression-language.json#/$defs/list-selection"
            },
            {
              "additionalProperties": {
                "anyOf": [
                  {
                    "type": "integer"
                  },
                  {
                    "enum": [
                      "(delete)"
                    ],
                    "title": "Remove the 32-bit integer at this position from the collection.",
                    "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/YAML-content-patch-syntax-reference#Collections"
                  }
                ]
              },
              "unevaluatedProperties": false
            }
          ]
        },
        {
          "type": "object",
          "properties": {
            "$add": {
              "title": "32-bit integers collection",
              "description": "A collection of signed 32-bit integers.",
              "type": "array",
              "items": {
                "type": "integer"
              }
            }
          },
          "title": "Add new 32-bit integers to the end of the collection.",
          "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/YAML-content-patch-syntax-reference#Collections",
          "additionalProperties": false,
          "unevaluatedProperties": false
        }
      ]
    },
    "$FleetTemplateId": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "$where": {
      "$ref": "#/$defs/ExplicitExpression"
    }
  },
  "$defs": {
    "DistantWorlds.Types.ShipRoleFactor": {
      "unevaluatedProperties": false,
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "Role": {
          "enum": [
            "Undefined",
            "Escort",
            "Frigate",
            "Destroyer",
            "Cruiser",
            "CapitalShip",
            "Carrier",
            "TroopTransport",
            "FreighterSmall",
            "FreighterMedium",
            "FreighterLarge",
            "MiningShip",
            "ConstructionShip",
            "ExplorationShip",
            "PassengerShip",
            "ColonyShip",
            "SpaceportSmall",
            "SpaceportMedium",
            "SpaceportLarge",
            "MiningStation",
            "DefensiveBase",
            "ResearchStation",
            "MonitoringStation",
            "ResortBase",
            "FighterInterceptor",
            "FighterBomber",
            "FuelTanker",
            "PlanetDestroyer"
          ]
        },
        "Factor": {
          "oneOf": [
            {
              "$ref": "./expression-language.json#"
            },
            {
              "type": "number"
            }
          ],
          "title": "decimal number or expression",
          "description": "A decimal number or an expression.\nSee https://github.com/DW2MC/DW2ModLoader/wiki/Expression-language-syntax-reference#numbers"
        }
      },
      "title": "ShipRoleFactor",
      "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/DistantWorlds.Types.ShipRoleFactor"
    },
    "ExplicitExpression": {
      "$ref": "./expression-language.json#"
    },
    "IntegerExpression": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "integer"
        }
      ],
      "title": "integer number or expression",
      "description": "An integer number or an expression.\nSee https://github.com/DW2MC/DW2ModLoader/wiki/Expression-language-syntax-reference#numbers"
    },
    "TacticsEngagementType": {
      "enum": [
        "DoNotEngage",
        "EngageWhenAttacked",
        "Nearby",
        "Location",
        "System",
        "SectorRange",
        "FuelRange33",
        "FuelRange50"
      ]
    },
    "TacticsStance": {
      "enum": [
        "Evade",
        "Cautious",
        "Neutral",
        "Aggressive"
      ]
    }
  }
}