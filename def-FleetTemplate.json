{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dw2mc.github.io/DW2ModLoader/def-FleetTemplate.json",
  "type": "object",
  "$defs": {
    "IntegerExpression": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "integer"
        }
      ]
    },
    "ExplicitExpression": {
      "$ref": "./expression-language.json#"
    },
    "TacticsEngagementType": {
      "enum": [
        "DoNotEngage",
        "EngageWhenAttacked",
        "Nearby",
        "Location",
        "System",
        "SectorRange",
        "FuelRange33",
        "FuelRange50"
      ]
    },
    "TacticsStance": {
      "enum": [
        "Evade",
        "Cautious",
        "Neutral",
        "Aggressive"
      ]
    }
  },
  "properties": {
    "FleetTemplateId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "RaceId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "Name": {
      "type": "string"
    },
    "$Name": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "Role": {
      "enum": [
        "Manual",
        "Attack",
        "Raid",
        "Defend",
        "Invade"
      ]
    },
    "DefaultEngagementRange": {
      "$ref": "#/$defs/TacticsEngagementType"
    },
    "DefaultRetreatStrength": {
      "enum": [
        "LessThan75",
        "LessThan66",
        "LessThan50",
        "LessThan33",
        "LessThan25",
        "Never"
      ]
    },
    "DefaultRetreatOverwhelmed": {
      "enum": [
        "EnemyStrength150",
        "EnemyStrength200",
        "EnemyStrength300",
        "Never",
        "EnemyStrength100"
      ]
    },
    "DefaultStance": {
      "$ref": "#/$defs/TacticsStance"
    },
    "ShipsEngagementRange": {
      "$ref": "#/$defs/TacticsEngagementType"
    },
    "ShipsAttackRangeNormal": {
      "$ref": "#/$defs/TacticsStance"
    },
    "ShipsAttackRangeStronger": {
      "$ref": "#/$defs/TacticsStance"
    },
    "ShipsRetreatWhen": {
      "enum": [
        "EnemySightedSystem",
        "EnemySightedLocation",
        "EnemyNearby",
        "WhenAttacked",
        "Shields50OrArmor99",
        "Shields20OrArmor50",
        "Never",
        "Shields50OrAnyDamage",
        "Shields20OrAnyDamage",
        "Shields0OrArmor0",
        "LightDamage",
        "ModerateDamage",
        "NonDefenseComponentDestroyedOrDamaged1",
        "NonDefenseComponentDestroyedOrDamaged20",
        "NonDefenseComponentDestroyedOrDamaged50"
      ]
    },
    "ShipsInvadeWhen": {
      "enum": [
        "InvadeImmediately",
        "InvadeWhenClear",
        "NeverInvade"
      ]
    },
    "AllowShipRoleReassignment": {
      "type": "boolean"
    },
    "OverrideShipTacticsWithFleet": {
      "type": "boolean"
    },
    "IsActive": {
      "type": "boolean"
    },
    "IsBaseline": {
      "type": "boolean"
    },
    "ShipAmounts": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/$defs/ShipRoleFactor"
              },
              {
                "type": "string",
                "pattern": "^\\(delete\\)$"
              }
            ]
          }
        },
        {
          "type": "object",
          "patternProperties": {
            "^0|[1-9][0-9]*|\\([^\\)]\u002B\\)$": {
              "oneOf": [
                {
                  "$ref": "#/$defs/ShipRoleFactor"
                },
                {
                  "type": "string",
                  "pattern": "^\\(delete\\)$"
                }
              ]
            }
          },
          "$ref": "./expression-language.json#/$defs/list-selection"
        },
        {
          "type": "object",
          "properties": {
            "$add": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/ShipRoleFactor"
              }
            }
          }
        }
      ]
    },
    "DesignIdsPerRole": {
      "oneOf": [
        {
          "type": "array",
          "items": {}
        },
        {
          "type": "object",
          "patternProperties": {
            "^0|[1-9][0-9]*|\\([^\\)]\u002B\\)$": {}
          },
          "$ref": "./expression-language.json#/$defs/list-selection"
        },
        {
          "type": "object",
          "properties": {
            "$add": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            }
          }
        }
      ]
    },
    "$FleetTemplateId": {
      "$ref": "#/$defs/ExplicitExpression"
    }
  }
}