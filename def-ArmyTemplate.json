{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://dw2mc.github.io/DW2ModLoader/def-ArmyTemplate.json",
  "type": "object",
  "properties": {
    "ArmyTemplateId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "Type": {
      "enum": [
        "Undefined",
        "Invasion",
        "DefenseMinor",
        "DefenseMajor",
        "DefenseBorder"
      ]
    },
    "Name": {
      "type": "string"
    },
    "$Name": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "RaceId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "IsActive": {
      "type": "boolean"
    },
    "IsBaseline": {
      "type": "boolean"
    },
    "InfantryLevel": {
      "$ref": "#/$defs/NumberExpression"
    },
    "ArmorLevel": {
      "$ref": "#/$defs/NumberExpression"
    },
    "PlanetaryDefenseLevel": {
      "$ref": "#/$defs/NumberExpression"
    },
    "SpecialForcesLevel": {
      "$ref": "#/$defs/NumberExpression"
    },
    "TitanLevel": {
      "$ref": "#/$defs/NumberExpression"
    },
    "$ArmyTemplateId": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "$where": {
      "$ref": "#/$defs/ExplicitExpression"
    }
  },
  "$defs": {
    "ExplicitExpression": {
      "$ref": "./expression-language.json#"
    },
    "IntegerExpression": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "integer"
        }
      ]
    },
    "NumberExpression": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "number"
        }
      ]
    }
  }
}