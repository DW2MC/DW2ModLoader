{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://dw2mc.github.io/DW2ModLoader/def-ArmyTemplate.json",
  "type": "object",
  "properties": {
    "ArmyTemplateId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "Type": {
      "enum": [
        "Undefined",
        "Invasion",
        "DefenseMinor",
        "DefenseMajor",
        "DefenseBorder"
      ],
      "description": "Some text (enum) mapped to some byte\nSee https://github.com/DW2MC/DW2ModLoader/wiki/YAML-content-patch-syntax-reference#Enums and https://github.com/DW2MC/DW2ModLoader/wiki/DistantWorlds.Types.ArmyTemplateType"
    },
    "Name": {
      "type": "string"
    },
    "$Name": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "RaceId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "IsActive": {
      "type": "boolean"
    },
    "IsBaseline": {
      "type": "boolean"
    },
    "InfantryLevel": {
      "$ref": "#/$defs/NumberExpression"
    },
    "ArmorLevel": {
      "$ref": "#/$defs/NumberExpression"
    },
    "PlanetaryDefenseLevel": {
      "$ref": "#/$defs/NumberExpression"
    },
    "SpecialForcesLevel": {
      "$ref": "#/$defs/NumberExpression"
    },
    "TitanLevel": {
      "$ref": "#/$defs/NumberExpression"
    },
    "$ArmyTemplateId": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "$where": {
      "$ref": "#/$defs/ExplicitExpression"
    }
  },
  "$defs": {
    "ExplicitExpression": {
      "$ref": "./expression-language.json#"
    },
    "IntegerExpression": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "integer"
        }
      ],
      "description": "An integer number or an expression.\nSee https://github.com/DW2MC/DW2ModLoader/wiki/Expression-language-syntax-reference#numbers"
    },
    "NumberExpression": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "number"
        }
      ],
      "title": "decimal number or expression",
      "description": "A decimal number or an expression.\nSee https://github.com/DW2MC/DW2ModLoader/wiki/Expression-language-syntax-reference#numbers"
    }
  }
}