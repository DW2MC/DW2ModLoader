{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://impromptu.ninja/dw2/def-Artifact.json",
  "type": "object",
  "$defs": {
    "IntegerExpression": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "integer"
        }
      ]
    },
    "ItemType": {
      "enum": [
        "Undefined",
        "Orb",
        "Ship",
        "Creature",
        "SpaceItem",
        "Fleet",
        "Character",
        "Empire",
        "Colony",
        "Troop",
        "Race",
        "Design",
        "WeaponBlast",
        "Resource",
        "Artifact",
        "ResearchProject",
        "PlanetaryFacility",
        "ColonyEvent",
        "SpecialLocation",
        "LocationThreatSummary"
      ]
    },
    "array": {
      "oneOf": [
        {
          "type": "array",
          "items": {}
        },
        {
          "type": "object",
          "patternProperties": {
            "^0|[1-9][0-9]*|\\([^\\)]\u002B\\)$": {}
          },
          "$ref": "./expression-language.json#/$defs/list-selection"
        },
        {
          "type": "object",
          "properties": {
            "$add": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            }
          }
        }
      ]
    },
    "ExplicitExpression": {
      "$ref": "./expression-language.json#"
    }
  },
  "properties": {
    "ArtifactId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "ParentId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "ParentType": {
      "$ref": "#/$defs/ItemType"
    },
    "DestinationId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "DestinationType": {
      "$ref": "#/$defs/ItemType"
    },
    "TransferTimeRemaining": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "number"
        }
      ]
    },
    "DiscoveryLevel": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "BonusesOnlyWhenAtColony": {
      "type": "boolean"
    },
    "BonusesOnlyWhenAtCapital": {
      "type": "boolean"
    },
    "BonusesToOwner": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/$defs/Bonus"
              },
              {
                "type": "string",
                "pattern": "^\\(delete\\)$"
              }
            ]
          }
        },
        {
          "type": "object",
          "patternProperties": {
            "^0|[1-9][0-9]*|\\([^\\)]\u002B\\)$": {
              "oneOf": [
                {
                  "$ref": "#/$defs/Bonus"
                },
                {
                  "type": "string",
                  "pattern": "^\\(delete\\)$"
                }
              ]
            }
          },
          "$ref": "./expression-language.json#/$defs/list-selection"
        },
        {
          "type": "object",
          "properties": {
            "$add": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/Bonus"
              }
            }
          }
        }
      ]
    },
    "ResearchProjectUnlockIds": {
      "$ref": "#/$defs/array"
    },
    "ResearchProjectCompleteIds": {
      "$ref": "#/$defs/array"
    },
    "GovernmentUnlockIds": {
      "$ref": "#/$defs/array"
    },
    "ResearchProjectsUnlockDescription": {
      "type": "string"
    },
    "$ResearchProjectsUnlockDescription": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "ResearchProjectsCompleteDescription": {
      "type": "string"
    },
    "$ResearchProjectsCompleteDescription": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "GovernmentsUnlockDescription": {
      "type": "string"
    },
    "$GovernmentsUnlockDescription": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "Name": {
      "type": "string"
    },
    "$Name": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "Description": {
      "type": "string"
    },
    "$Description": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "ImageFilename": {
      "type": "string"
    },
    "$ImageFilename": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "$ArtifactId": {
      "$ref": "#/$defs/ExplicitExpression"
    }
  }
}