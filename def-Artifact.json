            "anyOf": [
              {
                "$ref": "#/$defs/DistantWorlds.Types.Bonus"
              },
              {
                "type": "string",
                "pattern": "^\\(delete\\)$"
              }
            ]
          }
        },
        {
          "allOf": [
            {
              "$ref": "./expression-language.json#/$defs/list-selection"
            },
            {
              "type": "object",
              "patternProperties": {
                "^0|[1-9][0-9]*|\\([^\\)]\u002B\\)$": {
                  "anyOf": [
                    {
                      "$ref": "#/$defs/DistantWorlds.Types.Bonus"
                    },
                    {
                      "type": "string",
                      "pattern": "^\\(delete\\)$"
                    }
                  ]
                }
              },
              "additionalProperties": false,
              "unevaluatedProperties": false
