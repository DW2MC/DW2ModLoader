{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dw2mc.github.io/DW2ModLoader/def-PlanetaryFacilityDefinition.json",
  "type": "object",
  "$defs": {
    "IntegerExpression": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "integer"
        }
      ]
    },
    "array": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/$defs/Bonus"
              },
              {
                "type": "string",
                "pattern": "^\\(delete\\)$"
              }
            ]
          }
        },
        {
          "type": "object",
          "patternProperties": {
            "^0|[1-9][0-9]*|\\([^\\)]\u002B\\)$": {
              "oneOf": [
                {
                  "$ref": "#/$defs/Bonus"
                },
                {
                  "type": "string",
                  "pattern": "^\\(delete\\)$"
                }
              ]
            }
          },
          "$ref": "./expression-language.json#/$defs/list-selection"
        },
        {
          "type": "object",
          "properties": {
            "$add": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/Bonus"
              }
            }
          }
        }
      ]
    },
    "NumberExpression": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "number"
        }
      ]
    },
    "array1": {
      "oneOf": [
        {
          "type": "array",
          "items": {}
        },
        {
          "type": "object",
          "patternProperties": {
            "^0|[1-9][0-9]*|\\([^\\)]\u002B\\)$": {}
          },
          "$ref": "./expression-language.json#/$defs/list-selection"
        },
        {
          "type": "object",
          "properties": {
            "$add": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            }
          }
        }
      ]
    },
    "ExplicitExpression": {
      "$ref": "./expression-language.json#"
    }
  },
  "properties": {
    "PlanetaryFacilityDefinitionId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "ItemBonuses": {
      "$ref": "#/$defs/array"
    },
    "EmpireBonuses": {
      "$ref": "#/$defs/array"
    },
    "BuildCost": {
      "type": "object",
      "properties": {
        "Money": {
          "$ref": "#/$defs/NumberExpression"
        },
        "Resources": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "oneOf": [
                  {
                    "$ref": "#/$defs/ResourceQuantity"
                  },
                  {
                    "type": "string",
                    "pattern": "^\\(delete\\)$"
                  }
                ]
              }
            },
            {
              "type": "object",
              "patternProperties": {
                "^0|[1-9][0-9]*|\\([^\\)]\u002B\\)$": {
                  "oneOf": [
                    {
                      "$ref": "#/$defs/ResourceQuantity"
                    },
                    {
                      "type": "string",
                      "pattern": "^\\(delete\\)$"
                    }
                  ]
                }
              },
              "$ref": "./expression-language.json#/$defs/list-selection"
            },
            {
              "type": "object",
              "properties": {
                "$add": {
                  "type": "array",
                  "items": {
                    "$ref": "#/$defs/ResourceQuantity"
                  }
                }
              }
            }
          ]
        }
      }
    },
    "MaintenanceCost": {
      "$ref": "#/$defs/NumberExpression"
    },
    "Size": {
      "$ref": "#/$defs/NumberExpression"
    },
    "IsRuins": {
      "type": "boolean"
    },
    "MaximumBuildCountPerGalaxy": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "MaximumBuildCountPerEmpire": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "AchievementRaceId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "PlanetaryShieldMaximumDamageAbsorbed": {
      "$ref": "#/$defs/NumberExpression"
    },
    "PlanetaryShieldPenetrationChance": {
      "$ref": "#/$defs/NumberExpression"
    },
    "WeaponComponentId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "WeaponComponentLevel": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "WeaponCount": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "FighterCapacity": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "FighterBuildRate": {
      "$ref": "#/$defs/NumberExpression"
    },
    "FighterRepairRate": {
      "$ref": "#/$defs/NumberExpression"
    },
    "ColonyCorruptionReductionProjectionRange": {
      "$ref": "#/$defs/NumberExpression"
    },
    "TerraformingDamageRepairRate": {
      "$ref": "#/$defs/NumberExpression"
    },
    "TerraformingQualityImprovementRate": {
      "$ref": "#/$defs/NumberExpression"
    },
    "TerraformingQualityMaximum": {
      "$ref": "#/$defs/NumberExpression"
    },
    "ColonyIncomeDrainRatio": {
      "$ref": "#/$defs/NumberExpression"
    },
    "ColonyInfluenceLevelToBuild": {
      "$ref": "#/$defs/NumberExpression"
    },
    "AllowTroopInfantryCloning": {
      "type": "boolean"
    },
    "HyperDenyRange": {
      "$ref": "#/$defs/NumberExpression"
    },
    "HyperDenyStrength": {
      "$ref": "#/$defs/NumberExpression"
    },
    "MedicalRating": {
      "$ref": "#/$defs/NumberExpression"
    },
    "FacilityFamilyId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "FacilityFamilyLevel": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "ExclusiveWithinFamily": {
      "type": "boolean"
    },
    "EmpireBonusSharingRate": {
      "$ref": "#/$defs/NumberExpression"
    },
    "QualityBoost": {
      "$ref": "#/$defs/NumberExpression"
    },
    "ValidPlanetTypeIds": {
      "oneOf": [
        {
          "type": "array",
          "items": {}
        },
        {
          "type": "object",
          "patternProperties": {
            "^0|[1-9][0-9]*|\\([^\\)]\u002B\\)$": {}
          },
          "$ref": "./expression-language.json#/$defs/list-selection"
        },
        {
          "type": "object",
          "properties": {
            "$add": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            }
          }
        }
      ]
    },
    "ValidGovernmentIds": {
      "$ref": "#/$defs/array1"
    },
    "TroopIdsRecruitable": {
      "$ref": "#/$defs/array1"
    },
    "Name": {
      "type": "string"
    },
    "$Name": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "Description": {
      "type": "string"
    },
    "$Description": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "ImageFilename": {
      "type": "string"
    },
    "$ImageFilename": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "$PlanetaryFacilityDefinitionId": {
      "$ref": "#/$defs/ExplicitExpression"
    }
  }
}