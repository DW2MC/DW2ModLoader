{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://dw2mc.github.io/DW2ModLoader/def-TroopDefinition.json",
  "type": "object",
  "properties": {
    "TroopDefinitionId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "RaceId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "Type": {
      "enum": [
        "Undefined",
        "Infantry",
        "Armored",
        "PlanetaryDefense",
        "SpecialForces",
        "Titan",
        "Raider",
        "Militia"
      ],
      "title": "TroopType",
      "description": "Some text (enum) mapped to some byte\nSee https://github.com/DW2MC/DW2ModLoader/wiki/YAML-content-patch-syntax-reference#Enums and https://github.com/DW2MC/DW2ModLoader/wiki/DistantWorlds.Types.TroopType"
    },
    "Size": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "RecruitmentCost": {
      "type": "object",
      "properties": {
        "Money": {
          "$ref": "#/$defs/NumberExpression"
        },
        "Resources": {
          "anyOf": [
            {
              "allOf": [
                {
                  "title": "ResourceQuantities collection",
                  "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/YAML-content-patch-syntax-reference#Collections and https://github.com/DW2MC/DW2ModLoader/wiki/DistantWorlds.Types.ResourceQuantity",
                  "type": "array",
                  "items": {
                    "anyOf": [
                      {
                        "$ref": "#/$defs/DistantWorlds.Types.ResourceQuantity"
                      },
                      {
                        "type": "string",
                        "enum": [
                          "(delete)"
                        ],
                        "title": "Remove the ResourceQuantity at this position from the collection.",
                        "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/YAML-content-patch-syntax-reference#Collections"
                      }
                    ]
                  },
                  "unevaluatedItems": false,
                  "unevaluatedProperties": false,
                  "additionalProperties": {
                    "anyOf": [
                      {
                        "$ref": "#/$defs/DistantWorlds.Types.ResourceQuantity"
                      },
                      {
                        "enum": [
                          "(delete)"
                        ],
                        "title": "Remove the ResourceQuantity at this position from the collection.",
                        "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/YAML-content-patch-syntax-reference#Collections"
                      }
                    ]
                  }
                },
                {
                  "$ref": "./expression-language.json#/$defs/list-selection"
                }
              ]
            },
            {
              "type": "object",
              "properties": {
                "$add": {
                  "title": "ResourceQuantities collection",
                  "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/YAML-content-patch-syntax-reference#Collections and https://github.com/DW2MC/DW2ModLoader/wiki/DistantWorlds.Types.ResourceQuantity",
                  "type": "array",
                  "items": {
                    "$ref": "#/$defs/DistantWorlds.Types.ResourceQuantity"
                  }
                }
              },
              "title": "Add new ResourceQuantities to the end of the collection.",
              "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/YAML-content-patch-syntax-reference#Collections",
              "additionalProperties": false,
              "unevaluatedProperties": false
            }
          ]
        }
      },
      "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/DistantWorlds.Types.Price",
      "unevaluatedProperties": false,
      "additionalProperties": false,
      "title": "Price"
    },
    "MaintenanceCost": {
      "$ref": "#/$defs/NumberExpression"
    },
    "AttackStrength": {
      "$ref": "#/$defs/NumberExpression"
    },
    "DefendStrength": {
      "$ref": "#/$defs/NumberExpression"
    },
    "SabotageStrength": {
      "$ref": "#/$defs/NumberExpression"
    },
    "EvasionInfantry": {
      "$ref": "#/$defs/NumberExpression"
    },
    "EvasionArmor": {
      "$ref": "#/$defs/NumberExpression"
    },
    "EvasionTitan": {
      "$ref": "#/$defs/NumberExpression"
    },
    "EvasionPlanetaryDefense": {
      "$ref": "#/$defs/NumberExpression"
    },
    "EvasionSpecialForces": {
      "$ref": "#/$defs/NumberExpression"
    },
    "IsRobotic": {
      "type": "boolean"
    },
    "InterceptWeaponComponentId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "Name": {
      "type": "string"
    },
    "$Name": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "Description": {
      "type": "string"
    },
    "$Description": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "ImageFilename": {
      "type": "string"
    },
    "$ImageFilename": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "$TroopDefinitionId": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "$where": {
      "$ref": "#/$defs/ExplicitExpression"
    }
  },
  "$defs": {
    "DistantWorlds.Types.ResourceQuantity": {
      "unevaluatedProperties": false,
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "ResourceId": {
          "oneOf": [
            {
              "$ref": "./expression-language.json#"
            },
            {
              "type": "integer"
            }
          ],
          "description": "An integer number or an expression.\nSee https://github.com/DW2MC/DW2ModLoader/wiki/Expression-language-syntax-reference#numbers"
        },
        "Amount": {
          "oneOf": [
            {
              "$ref": "./expression-language.json#"
            },
            {
              "type": "number"
            }
          ],
          "title": "decimal number or expression",
          "description": "A decimal number or an expression.\nSee https://github.com/DW2MC/DW2ModLoader/wiki/Expression-language-syntax-reference#numbers"
        }
      },
      "description": "See https://github.com/DW2MC/DW2ModLoader/wiki/DistantWorlds.Types.ResourceQuantity",
      "title": "ResourceQuantity"
    },
    "ExplicitExpression": {
      "$ref": "./expression-language.json#"
    },
    "IntegerExpression": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "integer"
        }
      ],
      "description": "An integer number or an expression.\nSee https://github.com/DW2MC/DW2ModLoader/wiki/Expression-language-syntax-reference#numbers"
    },
    "NumberExpression": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "number"
        }
      ],
      "title": "decimal number or expression",
      "description": "A decimal number or an expression.\nSee https://github.com/DW2MC/DW2ModLoader/wiki/Expression-language-syntax-reference#numbers"
    }
  }
}