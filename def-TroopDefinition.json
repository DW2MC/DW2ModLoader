{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://dw2mc.github.io/DW2ModLoader/def-TroopDefinition.json",
  "type": "object",
  "properties": {
    "TroopDefinitionId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "RaceId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "Type": {
      "enum": [
        "Undefined",
        "Infantry",
        "Armored",
        "PlanetaryDefense",
        "SpecialForces",
        "Titan",
        "Raider",
        "Militia"
      ]
    },
    "Size": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "RecruitmentCost": {
      "type": "object",
      "properties": {
        "Money": {
          "$ref": "#/$defs/NumberExpression"
        },
        "Resources": {
          "anyOf": [
            {
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "$ref": "#/$defs/DistantWorlds.Types.ResourceQuantity"
                  },
                  {
                    "type": "string",
                    "pattern": "^\\(delete\\)$"
                  }
                ]
              }
            },
            {
              "allOf": [
                {
                  "$ref": "./expression-language.json#/$defs/list-selection"
                },
                {
                  "type": "object",
                  "additionalProperties": {
                    "anyOf": [
                      {
                        "$ref": "#/$defs/DistantWorlds.Types.ResourceQuantity"
                      },
                      {
                        "type": "string",
                        "pattern": "^\\(delete\\)$"
                      }
                    ]
                  },
                  "unevaluatedProperties": false
                }
              ]
            },
            {
              "type": "object",
              "properties": {
                "$add": {
                  "type": "array",
                  "items": {
                    "$ref": "#/$defs/DistantWorlds.Types.ResourceQuantity"
                  }
                }
              },
              "additionalProperties": false,
              "unevaluatedProperties": false
            }
          ]
        }
      },
      "unevaluatedProperties": false,
      "additionalProperties": false
    },
    "MaintenanceCost": {
      "$ref": "#/$defs/NumberExpression"
    },
    "AttackStrength": {
      "$ref": "#/$defs/NumberExpression"
    },
    "DefendStrength": {
      "$ref": "#/$defs/NumberExpression"
    },
    "SabotageStrength": {
      "$ref": "#/$defs/NumberExpression"
    },
    "EvasionInfantry": {
      "$ref": "#/$defs/NumberExpression"
    },
    "EvasionArmor": {
      "$ref": "#/$defs/NumberExpression"
    },
    "EvasionTitan": {
      "$ref": "#/$defs/NumberExpression"
    },
    "EvasionPlanetaryDefense": {
      "$ref": "#/$defs/NumberExpression"
    },
    "EvasionSpecialForces": {
      "$ref": "#/$defs/NumberExpression"
    },
    "IsRobotic": {
      "type": "boolean"
    },
    "InterceptWeaponComponentId": {
      "$ref": "#/$defs/IntegerExpression"
    },
    "Name": {
      "type": "string"
    },
    "$Name": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "Description": {
      "type": "string"
    },
    "$Description": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "ImageFilename": {
      "type": "string"
    },
    "$ImageFilename": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "$TroopDefinitionId": {
      "$ref": "#/$defs/ExplicitExpression"
    },
    "$where": {
      "$ref": "#/$defs/ExplicitExpression"
    }
  },
  "$defs": {
    "DistantWorlds.Types.ResourceQuantity": {
      "unevaluatedProperties": false,
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "ResourceId": {
          "oneOf": [
            {
              "$ref": "./expression-language.json#"
            },
            {
              "type": "integer"
            }
          ]
        },
        "Amount": {
          "oneOf": [
            {
              "$ref": "./expression-language.json#"
            },
            {
              "type": "number"
            }
          ]
        }
      }
    },
    "ExplicitExpression": {
      "$ref": "./expression-language.json#"
    },
    "IntegerExpression": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "integer"
        }
      ]
    },
    "NumberExpression": {
      "oneOf": [
        {
          "$ref": "./expression-language.json#"
        },
        {
          "type": "number"
        }
      ]
    }
  }
}